<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?> <?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #e6f0f2;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.uaspbo_habittracker_27bulanmei.controller.StatisticsController">
    <top>
        <Label text="Statistik &amp; Progres" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
            <padding>
                <Insets top="20.0" />
            </padding>
        </Label>
    </top>
    <center>
        <VBox alignment="CENTER_LEFT" spacing="20.0">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Tampilkan Statistik untuk:">
                        <font><Font size="14.0" /></font>
                    </Label>
                    <ComboBox fx:id="habitSelectionComboBox" prefWidth="250.0" />
                </HBox>
                <Label fx:id="percentageLabel" text="Persentase Keberhasilan: -%">
                    <font><Font size="18.0" /></font>
                </Label>
                <Label fx:id="streakLabel" text="Streak Terpanjang: - hari">
                    <font><Font size="18.0" /></font>
                </Label>
                <Label fx:id="weeklyAverageLabel" text="Rata-rata Penyelesaian/Minggu: -">
                    <font><Font size="18.0" /></font>
                </Label>
            </children>
            <padding>
                <Insets left="50.0" right="50.0" />
            </padding>
        </VBox>
    </center>
    <bottom>
        <Button onAction="#handleBack" text="Kembali" BorderPane.alignment="CENTER_LEFT">
            <BorderPane.margin>
                <Insets bottom="20.0" left="20.0" />
            </BorderPane.margin>
        </Button>
    </bottom>
</BorderPane>