                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                </padding>
                <Label text="Persentase Keberhasilan ðŸ“ˆ" style="-fx-font-weight: bold; -fx-text-fill: #1e3d59; -fx-font-size: 14px;"/>
